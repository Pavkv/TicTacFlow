@{
    ViewBag.Title = "Leaderboard";
}

<!DOCTYPE html>

<html lang="en">
<head>
    <title>Leaderboard</title>
</head>
<body>
<div>
    <h2>Leaderboard</h2>
    <table class="table">
        <tr>
            <th>Rank</th>
            <th>Username</th>
            <th>Wins</th>
            <th>Losses</th>
            <th>Draws</th>
        </tr>
        @for (var i = 0; i < Model.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model[i].Username</td>
                <td>@Model[i].Wins</td>
                <td>@Model[i].Losses</td>
                <td>@Model[i].Ties</td>
            </tr>
        }
    </table>
</div>
</body>
</html>